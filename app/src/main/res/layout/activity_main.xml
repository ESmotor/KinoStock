<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/navigation_menu" />

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:menu="@menu/toolbar_top_menu"
            app:navigationIcon="@drawable/round_menu"
            app:title="@string/page_title"
            app:titleTextAppearance="@style/TextAppearance.MdcTypographyStyles.Headline5" />
    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/tv_mostpopular"
        style="@style/TextAppearance.MdcTypographyStyles.Headline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/main_page.most_popular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/app_bar_layout" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_poster"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_mostpopular"/>

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/grid_posters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layoutAnimation="@anim/grid_animation"
        app:columnCount="3"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_poster"
        app:orientation="horizontal"
        app:useDefaultMargins="true">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_grid_poster1"
            android:layout_width="110dp"
            android:layout_height="165dp"
            android:clickable="true"
            android:elevation="10dp"
            android:focusable="true"
            android:stateListAnimator="@animator/grid_poster_click_animator"
            app:cardCornerRadius="15dp">

            <ImageView
                android:id="@+id/im_grid_poster1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/poster_grid_1" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_grid_poster2"
            android:layout_width="110dp"
            android:layout_height="165dp"
            android:clickable="true"
            android:elevation="10dp"
            android:focusable="true"
            android:stateListAnimator="@animator/grid_poster_click_animator"
            app:cardCornerRadius="15dp">

            <ImageView
                android:id="@+id/im_grid_poster2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/poster_grid_2" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_grid_poster3"
            android:layout_width="110dp"
            android:layout_height="165dp"
            android:clickable="true"
            android:elevation="10dp"
            android:focusable="true"
            android:stateListAnimator="@animator/grid_poster_click_animator"
            app:cardCornerRadius="15dp">

            <ImageView
                android:id="@+id/im_grid_poster3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/poster_grid_3" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_grid_poster4"
            android:layout_width="110dp"
            android:layout_height="165dp"
            android:clickable="true"
            android:elevation="10dp"
            android:focusable="true"
            android:stateListAnimator="@animator/grid_poster_click_animator"
            app:cardCornerRadius="15dp">

            <ImageView
                android:id="@+id/im_grid_poster4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/poster_grid_4" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_grid_poster5"
            android:layout_width="110dp"
            android:layout_height="165dp"
            android:clickable="true"
            android:elevation="10dp"
            android:focusable="true"
            android:stateListAnimator="@animator/grid_poster_click_animator"
            app:cardCornerRadius="15dp">

            <ImageView
                android:id="@+id/im_grid_poster5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/poster_grid_5" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_grid_poster6"
            android:layout_width="110dp"
            android:layout_height="165dp"
            android:clickable="true"
            android:elevation="10dp"
            android:focusable="true"
            android:stateListAnimator="@animator/grid_poster_click_animator"
            app:cardCornerRadius="15dp">

            <ImageView
                android:id="@+id/im_grid_poster6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/poster_grid_6" />

        </androidx.cardview.widget.CardView>

    </androidx.gridlayout.widget.GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>