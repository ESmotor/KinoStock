    <!--    Bottom Navigation Style Coloder-->
    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
    </style>

    <!--    Top toolbar Style Colored-->
    <style name="Widget.App.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Toolbar</item>
        <item name="titleTextAppearance">@style/TextAppearance.MdcTypographyStyles.Headline6</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.MdcTypographyStyles.Subtitle1</item>
    </style>

    <style name="ThemeOverlay.App.Toolbar" parent="">
        <item name="colorPrimary">@color/md_theme_light_primary</item>
<!--        <item name="colorPrimaryVariant">#D742F1</item>-->
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
    </style>


